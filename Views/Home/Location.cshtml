
@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Location of our physical store</h2>

<style type="text/css">
    /* Always set the map height explicitly to define the size of the div
        * element that contains the map. */
    #map {
        height: 400px;
        margin: 0;
        padding: 0;
    }
   
 
</style>

<div class="row">
    <div id="map"></div>
    <script>
        let map;
        let marker;

        document.getElementById("LocationButton").classList.add('active');
        document.getElementById("HomeButton").classList.remove('active');
        document.getElementById("AboutButton").classList.remove('active');

        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 43.539900, lng: -5.648360 },
                zoom: 12,
            });

            const marker = new google.maps.Marker({
                position: { lat: 43.539900, lng: -5.648360 },
                map: map,
            });
        }
    </script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY&callback=initMap&libraries=&v=weekly" 
            async defer></script>
</div>
